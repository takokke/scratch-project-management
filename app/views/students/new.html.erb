<h2>生徒新規登録</h2>
<%= form_with model: @student, local: true do |f| %>
  <div>
    <%= f.label :scratch_username, 'Scratchユーザー名' %>
  </div>
  <div>
    <%= f.text_field :scratch_username %>
  </div>
  <div>
    <%= f.label :name, '生徒氏名' %>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit '登録' %>
  </div>
<% end %>